@model IEnumerable<Contact>

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Message"]</h1>

    <!-- Filter -->
    <form method="get" asp-action="Submissions" class="mb-4 d-flex justify-content-center">
        <div class="input-group w-50">
            <input type="text" name="nameFilter" class="form-control" placeholder="Search by name" />
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </form>

    <!-- Table of Lists -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">Contact Submissions</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <!-- Responsive Table Wrapper -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Message</th>
                                <th>Age</th>
                                <th>Contact Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contact in Model)
                            {
                                <tr>
                                    <td>@contact.Name</td>
                                    <td>@contact.Email</td>
                                    <td>@contact.Message</td>
                                    <td>@contact.Age</td>
                                    <td>@contact.ContactNumber</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-4" role="alert">
                    No submissions found.
                </div>
            }
        </div>
    </div>
</div>
